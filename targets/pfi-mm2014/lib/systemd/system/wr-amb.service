[Unit]
Description=WindRiver Automotive Message Broker
Requires=dbus.service
After=dbus.service
After=ipod-daemon-2.service

[Service]
Type=Simple
Environment=LD_LIBRARY_PATH=/opt/windriver/lib
ExecStart=/opt/windriver/wr-amb/wr-amb
Restart=always
RestartSec=5
TimeoutSec=5

[Install]
WantedBy=multi-user.target
